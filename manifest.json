{
  "manifest_version": 2,
  "name": "Check X (Twitter) Rate Limits",
  "version": "1.0.0",
  "description": "Check rate limits of X (Twitter).",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_title": "Check X Rate Limits",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["*://*.twitter.com/*", "webRequest", "cookies"]
}
