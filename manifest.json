{
  "manifest_version": 3,
  "name": "Check X (Twitter) Rate Limits",
  "version": "1.1.0",
  "description": "Check API rate limit statuses of X (Twitter).",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "Check X Rate Limits",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*", "*://mobile.twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["*://*.twitter.com/*"],
  "permissions": ["webRequest", "cookies"]
}
