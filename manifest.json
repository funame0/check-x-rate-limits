{
  "manifest_version": 3,
  "name": "Check X Rate Limits",
  "version": "1.0.0",
  "description": "Check rate limits of X (Twitter).",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["*://*.twitter.com/*"],
  "permissions": ["webRequest", "cookies"]
}
