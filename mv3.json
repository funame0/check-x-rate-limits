{
  "manifest_version": 3,
  "name": "__MSG_ext_name__",
  "version": "1.1.0",
  "default_locale": "en",
  "description": "__MSG_ext_desc__",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["*://*.twitter.com/*"],
  "permissions": ["webRequest", "cookies", "storage"]
}
