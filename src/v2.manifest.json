{
  "manifest_version": 2,
  "name": "__MSG_ext_name__",
  "version": "2.0.0",
  "default_locale": "en",
  "description": "__MSG_ext_desc__",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*"],
      "js": ["js/content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "*://*.twitter.com/*",
    "*://tweetdeck.dimden.dev/*",
    "webRequest",
    "cookies",
    "storage"
  ]
}
